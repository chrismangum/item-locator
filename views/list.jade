.sidebar
  .search
    input(ng-model='searchValue', placeholder='Filter by Name', type='text')
  .label.label-distance(ng-show='groupLabel')
    span.label-search-query {{groupLabel}}
    a.label-close(href='#')
      span.icon-close(ng-click='unGroup()')
  .sidebar-listings
    div(ng-repeat='item in (sortedData = (locations.data | orderBy:sortField))')
      div(ng-if='groupLabel', ng-bind-html='getLabel({data: sortedData, i: $index})')
      a.sidebar-listing(activate-item='item', ng-transclude='ng-transclude')

